<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/rlLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juan Zamora"
            android:textSize="32dp" />

        <ImageView
            android:id="@+id/imvChip"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@android:drawable/checkbox_off_background"
            android:layout_toRightOf="@id/lblNombre"
            android:paddingTop="5dp"

            />


        <TextView
            android:id="@+id/lblCedula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombre"
            android:text="20-70-5165"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/lblEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblNombre"
            android:layout_toRightOf="@+id/lblCedula"
            android:text="24 aÃ±os"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/lblCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblCedula"
            android:text="JuanZamora@utp.ac.pa"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/lblTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblCorreo"
            android:text="6088-4854"
            android:textSize="26dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lnlRigt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/marquito"
        android:padding="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvDosis1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@android:drawable/checkbox_off_background"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/imvDosis2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@android:drawable/checkbox_off_background"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/imvDosis3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@android:drawable/checkbox_off_background"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</RelativeLayout>